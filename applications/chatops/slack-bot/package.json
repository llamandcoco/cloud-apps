{
  "name": "@llamandcoco/slack-bot",
  "version": "1.0.0",
  "description": "Event-driven Slack bot for platform automation",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf build dist && npm run build",
    "package": "./scripts/package.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "dev": "ts-node src/local.ts",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.490.0",
    "@aws-sdk/client-ssm": "^3.490.0",
    "aws-xray-sdk-core": "^3.5.3",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
