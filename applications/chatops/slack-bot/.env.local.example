# Local Development Environment Variables
# Copy this to .env.local and fill in your values

# Slack credentials (for local testing)
export SLACK_BOT_TOKEN=xoxb-your-local-test-token
export SLACK_SIGNING_SECRET=your-local-test-secret

# AWS configuration (for local testing with LocalStack)
export AWS_REGION=ca-central-1
export AWS_ENDPOINT_URL=http://localhost:4566  # LocalStack
export AWS_ACCESS_KEY_ID=test
export AWS_SECRET_ACCESS_KEY=test

# Application configuration
export ENVIRONMENT=local
export AWS_PARAMETER_PREFIX=/laco/local
export LOG_LEVEL=debug
export NODE_ENV=development

# EventBridge (LocalStack)
export EVENTBRIDGE_BUS_NAME=laco-local-chatbot

# SQS Queues (LocalStack)
export SQS_SR_QUEUE_URL=http://localhost:4566/000000000000/laco-local-sr-queue
export SQS_LW_QUEUE_URL=http://localhost:4566/000000000000/laco-local-lw-queue
